{
  "name": "tutorconnect-backend",
  "version": "1.0.0",
  "description": "TutorConnect - Professional Tutoring Platform Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup-db": "node database/setup.js",
    "seed": "node database/seed.js",
    "migrate": "node database/migrate.js",
    "build": "echo \"No build process needed for Node.js backend\"",
    "lint": "echo \"Linting not configured\"",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "check-deps": "npm audit",
    "update-deps": "npm update",
    "production": "NODE_ENV=production node server.js"
  },
  "keywords": [
    "tutoring",
    "education",
    "learning",
    "nodejs",
    "express",
    "mysql",
    "jwt",
    "api",
    "backend",
    "rest"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "mysql2": "^3.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^10.0.0",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.15",
    "socket.io": "^4.8.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "@types/node": "^22.5.4",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tutorconnect-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tutorconnect-backend/issues"
  },
  "homepage": "https://github.com/yourusername/tutorconnect-backend#readme",
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "*.log"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
